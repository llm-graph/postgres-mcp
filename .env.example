# Database Aliases - comma-separated list
DB_ALIASES=main,reporting

# Default database alias if not specified in tool calls
DEFAULT_DB_ALIAS=main

# Optional: Enable API Key authentication (primarily for network transports)
ENABLE_AUTH=false
MCP_API_KEY=your_secret_api_key_here

# Connection details for main database
DB_MAIN_HOST=localhost
DB_MAIN_PORT=5432
DB_MAIN_NAME=app_db
DB_MAIN_USER=postgres
DB_MAIN_PASSWORD=postgres_password
DB_MAIN_SSL=disable

# Connection details for reporting database
DB_REPORTING_HOST=reporting-db.example.com
DB_REPORTING_PORT=5432
DB_REPORTING_NAME=analytics_db
DB_REPORTING_USER=readonly_user
DB_REPORTING_PASSWORD=readonly_password
DB_REPORTING_SSL=require 